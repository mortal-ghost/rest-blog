<%- include('partials/header.ejs') %>

<h1 class="text-4xl text-gray-700 text-center"><%= foundBlog.title %></h1>
<div class="flex justify-around">
  <div class="border-2 w-4/5 m-3 p-2 rounded-lg border-gray-400">
    <div class="flex justify-around mt-2">
      <img
        class="rounded-lg"
        width="50%"
        src="<%= foundBlog.image %>"
        alt="<%= foundBlog.title %>"
      />
    </div>
    <p class="text-center text-sm text-slate-400 font-light mb-10">
      Created at - <%= foundBlog.created.toDateString() %>
    </p>
    <div class="flex justify-around">
      <p class="mx-10 p-2 text-xl"><%- foundBlog.body %></p>
    </div>
  </div>
</div>

<div class="flex justify-center">
  <form class="mx-4" action="/blogs/<%= foundBlog.id %>/edit" method="get">
    <button
      class="bg-black w-20 hover:bg-gray-600 text-center rounded-lg text-white font-bold py-2 px-4"
      type="submit"
    >
      Edit
    </button>
  </form>

  <form class="mx-4" action="/blogs/<%= foundBlog.id %>?_method=DELETE" method="post">
    <button
      class="bg-black w-20 hover:bg-gray-600 text-center rounded-lg text-white font-bold py-2 px-4"
      type="submit"
    >
      Delete
    </button>
  </form>
</div>

<%- include('partials/footer.ejs') %>
